model Question {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  surveyId  String   @db.ObjectId
  survey    Survey   @relation("SurveyQuestions", fields: [surveyId], references: [id])

  type      String   
  title     String
  required  Boolean  @default(false)  // Whether the question is required or not
  order     Int

  config    Json     // options, scale, min/max, etc.

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  answers   Answer[] @relation("QuestionAnswers")

  @@index([surveyId])

  @@map("questions")
}
