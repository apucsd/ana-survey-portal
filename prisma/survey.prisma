model Survey {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  status      SurveyStatus @default(UNPUBLISHED)
  endDate     DateTime?
  estimatedTime Int?
  publishedAt DateTime?

  createdBy   String   @db.ObjectId
  creator     User     @relation("SurveyCreator", fields: [createdBy], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  questions   Question[] @relation("SurveyQuestions")
  responses   Response[] @relation("SurveyResponses")

  @@index([createdBy])


  @@map("surveys")
}


enum SurveyStatus {
  PUBLISHED
  UNPUBLISHED
  DELETED   
  CLOSED             
}